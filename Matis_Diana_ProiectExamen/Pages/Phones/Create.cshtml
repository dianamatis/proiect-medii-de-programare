@page
@model Matis_Diana_ProiectExamen.Pages.Phones.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Phone</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Phone.PhoneModel" class="control-label"></label>
                <input asp-for="Phone.PhoneModel" class="form-control" />
                <span asp-validation-for="Phone.PhoneModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone.Capacity" class="control-label"></label>
                <input asp-for="Phone.Capacity" class="form-control" />
                <span asp-validation-for="Phone.Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone.Price" class="control-label"></label>
                <input asp-for="Phone.Price" class="form-control" />
                <span asp-validation-for="Phone.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone.LunchDate" class="control-label"></label>
                <input asp-for="Phone.LunchDate" class="form-control" />
                <span asp-validation-for="Phone.LunchDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone.BrandID" class="control-label">Brand Name</label>
                <select asp-for="Phone.BrandID" class="form-control" asp-items="ViewBag.BrandID">
                </select>
                <span asp-validation-for="Phone.BrandID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                foreach (var cond in Model.AssignedConditionDataList)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedConditions"
                                               value="@cond.ConditionID"
                                               @(Html.Raw(cond.Assigned ? "checked=\"checked\"" : "")) />
                                        @cond.ConditionID @: @cond.Name
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </table>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
